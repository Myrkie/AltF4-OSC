<Window x:Class="WPF_OSC_Keyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VRChat OSC Keyboard" Height="350" Width="512" MinHeight="150" MinWidth="100" ResizeMode="CanResize" Style="{DynamicResource CustomWindowStyle}" PreviewLostKeyboardFocus="Window_PreviewLostKeyboardFocus" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Margin="4" Name="ChatBox" IsReadOnly="True" VerticalScrollBarVisibility="Visible"/>
        <Label Grid.Row="1" Margin="0,15,1,0" FontSize="13" VerticalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Left" Content="Message:" Name="MessageLabel"/>
        <TextBox Grid.Row="1" Margin="65,4,35,4" MinWidth="100" Name="InputText"/>
        <Button Grid.Row="1" Margin="0,0,0,0" VerticalContentAlignment="Center" HorizontalAlignment="Right" Content="Send" Click="SendButton_Click" Name="SendMessageButton"/>
        <Button Grid.Row="1" Margin="0,0,0,0" VerticalContentAlignment="Top" VerticalAlignment="Top" HorizontalAlignment="Left" Content="Console" Click="ConsoleButton_Click" Name="EnableConsole"/>

    </Grid>
</Window>